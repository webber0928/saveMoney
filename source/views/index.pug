extends ./partials/_layout

block content
    .wrapping
        .header 還有些沒買到優惠攻略計算器
        .merchant_options.select-style
            select#merchant_select
                option(value="PCHOME") PCHOME
        .container
            .stepOne.clothed
                .card-title step1：輸入購買金額
                .card-content.stepOne-content
                    .card-description 請輸入欲購物之金額
                    input.input-money(type="number" pattern="[0-9]*")
                    .card-description.font-big 元
            .stepTwo.clothed
                .card-title step2：選擇銀行
                .card-content.stepTwo-content
                    .card-description 請選擇所擁有的信用卡之發卡銀行（*可複選
                    .stepTwo_checkbox-block.checkbox-block
                        .chekckBox
                            .modal_label
                                input(value="B006" type="checkbox")
                                span.checkmark
                                | 合作金庫
                        .chekckBox
                            .modal_label
                                input(value="B007" type="checkbox")
                                span.checkmark
                                | 第一銀行
                        .chekckBox
                            .modal_label
                                input(value="B008" type="checkbox")
                                span.checkmark
                                | 華南銀行
            .stepThree.clothed
                .card-title step3：選擇信用卡
                .card-content.stepThree-content
                    .card-description 請選擇擁有的信用卡（*可複選）
                    .stepThree_checkbox-block.checkbox-block
                        .chekckBox
                            .modal_label
                                input(value="B007CD002" type="checkbox")
                                span.checkmark
                                | 第一 Wonderful星璨卡
                        .chekckBox
                            .modal_label
                                input(value="B008CD008" type="checkbox")
                                span.checkmark
                                | 華南 icash聯名卡
                        .chekckBox
                            .modal_label
                                input(value="B012CD003" type="checkbox")
                                span.checkmark
                                | 台北富邦 數位生活卡
        .footer
            .button-counting 計算折扣金額